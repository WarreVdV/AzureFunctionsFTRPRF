{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ],
      "route":"blogposts/{id}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "Blog",
      "databaseName": "websitefunctions",
      "collectionName": "my-blogposts",
      "connectionStringSetting": "CosmosDbConnectionString",
      "Id": "{id}",
      "PartitionKey": "{id}"
    }
  ]
  ,
    "disabled": false
}
